# LLM Ayarları
LLM_MODEL_PATH=/path/to/llama/model  # Llama model dosyasının yolu
LLM_MAX_TOKENS=2048  # Maksimum token sayısı
LLM_TEMPERATURE=0.7  # Çıktı çeşitliliği (0.0-1.0)

# OCR Ayarları
OCR_CONFIDENCE_THRESHOLD=0.6  # OCR güven eşiği
OCR_LANG=tur  # OCR dil ayarı (tur: Türkçe)

# Çıktı Ayarları
OUTPUT_DIR=./outputs  # Çıktı dosyalarının kaydedileceği dizin
DEBUG_MODE=False  # Hata ayıklama modu

# API Anahtarları
GEMINI_API_KEY=your_gemini_api_key_here  # Gemini API anahtarı
HUGGINGFACEHUB_API_TOKEN=your_huggingface_token_here  # HuggingFace API token (isteğe bağlı)

# Sistem Ayarları
DEBUG=False  # Genel hata ayıklama modu
CUDA_VISIBLE_DEVICES=0  # GPU kullanımı için (isteğe bağlı) 